@model TestPlantilla.Models.ColaboradorView
<h2>Save</h2>
@using (Html.BeginForm("Guardar", "Colaborador", FormMethod.Post, new { id = "popupForm" }))
{
    if (Model != null && Model.run > 0)
    {
        @Html.HiddenFor(c => c.run)
    }
    else
    {
        <div class="form-group">
            <label>R.U.N.</label>
            @Html.TextBoxFor(c => c.run, new { @class = "form-control" })
            @Html.ValidationMessageFor(c => c.run)
        </div>
    }

    <div class="form-group">
        <label>R.U.T.</label>
        @Html.TextBoxFor(c => c.rut, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.rut)
    </div>
    <div class="form-group">
        <label>Nombre</label>
        @Html.TextBoxFor(c => c.nombre, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.nombre)
    </div>
    <div class="form-group">
        <label>A. Paterno</label>
        @Html.TextBoxFor(c => c.apellidoPaterno, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.apellidoPaterno)
    </div>
    <div class="form-group">
        <label>A. Materno</label>
        @Html.TextBoxFor(c => c.apellidoMaterno, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.apellidoMaterno)
    </div>
    <div class="form-group">
        <label>Edad</label>
        @Html.TextBoxFor(c => c.edad, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.edad)
    </div>
    <div class="form-group">
        <label>Cargo</label>
        @Html.TextBoxFor(c => c.cargo, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.cargo)
    </div>
    <div class="form-group">
        <label>Teléfono</label>
        @Html.TextBoxFor(c => c.telefono, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.telefono)
    </div>
    <div class="form-group">
        <label>Valor H/E</label>
        @Html.TextBoxFor(c => c.valorHoraExtra, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.valorHoraExtra)
    </div>
    <div>
        <input type="submit" value="Guardar" />
    </div>
}
